 <body> 
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <ul class="nav pull-right">
                    
                </ul>
                <a class="brand" href="index.html"><span class="first">实验室</span> <span class="second">管理系统</span></a>
            </div>
        </div>
    </div>
    

    <div class="container-fluid">
        
     <div class="row-fluid">
    <div class="dialog span4">
        <div class="block">
            <div class="block-heading">用户登录</div>
            <div class="block-body">
                <form action="Login">
                    <label>账号</label>
                    <input type="text" class="span12" name="no" id="no" >
                    <label>密码</label>
                    <input type="password" class="span12" name="pwd" id="pwd" >
                    <input type="submit" id="submit" class="btn btn-primary" value="登录"/>
                    <input type="reset" id="reset" class="btn pull-right" value="重置"/>
                    <label id="message" class="remember-me" style="color:red;"><s:property value="message" /></label>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

    
<script type="text/javascript">
	function clear(){
		$("#message").text("");
	}
    $("#reset").click(function(){
	    clear();
	});
	$("#no").focus(function(){
		clear();
	})
	$("#pwd").focus(function(){
		clear();
	})
    $("#submit").click(function(){
    	if($("#no").val().length==0)
    	{
    		layer.msg('请输入用户名！', {icon: 2});
    		return false;
    	}
    	if($("#pwd").val().length==0)
    	{
    		layer.msg('请输入密码！', {icon: 2});
    		return false;
    	}
    });
    
</script>
    <script src="${pageContext.request.contextPath}/lib/bootstrap/js/bootstrap.js">
</script>
